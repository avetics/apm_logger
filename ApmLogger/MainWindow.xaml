<Window x:Class="ApmLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApmLogger"
        mc:Ignorable="d"
        Title="APMLogger" Height="350" Width="525">
    <Grid>
        <Button x:Name="stopBtn" Content="Stop APM Log" HorizontalAlignment="Left" Margin="285,236,0,0" VerticalAlignment="Top" Width="197"  Height="48" Click="cancel_button_Click"/>
        <TextBox x:Name="portText" HorizontalAlignment="Left" Height="48" Margin="249,36,0,0" TextWrapping="Wrap" Text="COM5" VerticalAlignment="Top" Width="96" FontSize="26.667" TextAlignment="Center"/>
        <Label x:Name="label" Content="Port" HorizontalAlignment="Left" Margin="173,34,0,0" VerticalAlignment="Top" Height="48" Width="71" FontSize="26.667"/>
        <Button x:Name="startBtn" Content="Start APM Log" HorizontalAlignment="Left" Margin="49,236,0,0" VerticalAlignment="Top" Width="194" Click="button_Click" Height="48"/>
        <Label x:Name="statusText" Content="Label" Margin="70,142,50,0" VerticalAlignment="Top" Width="400" Height="42" FontSize="20"/>

    </Grid>
</Window>
