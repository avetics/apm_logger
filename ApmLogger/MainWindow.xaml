<Window x:Class="ApmLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApmLogger"
        mc:Ignorable="d"
        Title="DataLogger" Height="540.4" Width="503">
    <Grid Margin="0,0,0.2,-16.8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="409*"/>
            <ColumnDefinition Width="84*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="stopBtn" Content="Stop APM Log" HorizontalAlignment="Left" Margin="230.8,460,0,0" VerticalAlignment="Top" Width="146"  Height="30" Click="cancel_button_Click" Grid.Column="1"/>
        <Label x:Name="label" Content="APM " HorizontalAlignment="Left" Margin="49.8,383,0,0" VerticalAlignment="Top" Height="30" Width="71" FontSize="14" Grid.Column="1"/>
        <Button x:Name="startBtn" Content="Start APM Log" HorizontalAlignment="Left" Margin="63.8,460,0,0" VerticalAlignment="Top" Width="144" Click="button_Click" Height="30" Grid.Column="1"/>
        <Label x:Name="statusText" Content="" Margin="81.8,416,19.2,0" VerticalAlignment="Top" Width="295" Height="42" HorizontalAlignment="Center" Grid.Column="1"/>
        <Label x:Name="label_Copy" Content="Hokuyu" HorizontalAlignment="Left" Margin="246.8,382,0,0" VerticalAlignment="Top" Height="30" Width="102" FontSize="14" Grid.Column="1"/>
        <Label x:Name="apmComLabel" Content="" HorizontalAlignment="Left" Margin="120.8,383,0,0" VerticalAlignment="Top" Height="30" Width="71" FontSize="14" Grid.Column="1"/>
        <Label x:Name="hokuyuComLabel" Content="" HorizontalAlignment="Left" Margin="340.8,381,0,0" VerticalAlignment="Top" Height="30" Width="71" FontSize="14" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Button x:Name="button" Content="Refresh" HorizontalAlignment="Left" Margin="191.8,327,0,0" VerticalAlignment="Top" Width="69" Height="36" Click="button_Click_1" Grid.Column="1"/>
        <Button x:Name="zoom2" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="34" Height="28" Click="button_Copy_Click" Grid.ColumnSpan="2" Margin="365.8,314,0,0" Grid.Column="1"/>
        <Button x:Name="zoom1" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="34" Height="28" Click="button_Copy1_Click" Grid.Column="2" Margin="7.8,314,0,0"/>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="309" Margin="5,0,0,0" VerticalAlignment="Top" Width="500" Grid.ColumnSpan="3">

        </Canvas>

    </Grid>
</Window>
